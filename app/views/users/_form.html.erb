<%= form_for(@user, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :email, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :username, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :username, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :password, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :firstname, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :firstname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :lastname, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :lastname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :gender, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :gender, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :birthday, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.date_select :birthday, :start_year => Date.current.year, :end_year => 1950, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :phone, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :address, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <%= f.label :deleted, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :deleted, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
