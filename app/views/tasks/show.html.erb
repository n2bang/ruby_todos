<div class="page-header">
  <%= link_to tasks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_task_path(@task), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show task</h1>
</div>

<dl class="dl-horizontal">
  <dt>Owner:</dt>
  <dd><%= @task.owner_id %></dd>

  <dt>Assignee:</dt>
  <dd><%= @task.assignee_id %></dd>

  <dt>Project:</dt>
  <dd><%= @task.project_id %></dd>

  <dt>Title:</dt>
  <dd><%= @task.title %></dd>

  <dt>Description:</dt>
  <dd><%= @task.description %></dd>

  <dt>Prioritise:</dt>
  <dd><%= @task.prioritise %></dd>

  <dt>Status:</dt>
  <dd><%= @task.status %></dd>

  <dt>Deleted:</dt>
  <dd><%= @task.deleted %></dd>

</dl>
