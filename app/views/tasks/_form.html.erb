<%= form_for(@task, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :owner_id, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select :owner_id, User.all, :id, :fullname, {prompt: "Select a user"}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :assignee_id, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select :assignee_id, User.all, :id, :fullname, {prompt: "Select a user"}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :project_id, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select :project_id, Project.all, :id, :title, {prompt: "Select a project"}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :title, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :description, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :prioritise, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :prioritise, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :status, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :deleted, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :deleted, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
